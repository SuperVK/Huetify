{
  "name": "huetify-electron",
  "version": "1.0.0",
  "description": "The electron dashboard for Huetify",
  "author": "SuperVK",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "filedev": "cross-env NODE_ENV=\"development\" electron .",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "@loopmode/electron-webpack-config-yarn-workspaces": "^0.2.0",
    "dotenv": "^6.2.0",
    "electron-log": "^3.0.9",
    "html-loader": "^1.0.0-alpha.0",
    "huetify-manager": "^0.1.1",
    "js-cookie": "^2.2.1",
    "node-fetch": "^2.6.0",
    "rc-slider": "^8.7.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.7.4",
    "cross-env": "^6.0.3",
    "electron": "9.1.0",
    "electron-builder": "^21.2.0",
    "electron-webpack": "^2.7.4",
    "webpack": "^4.35.3"
  },
  "build": {
    "appId": "xyz.supervk.huetify",
    "productName": "Huetify",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "SuperVK"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.entertainment",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "backgroundColor": "#212121"
    }
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "webpackConfig": "custom.additions.webpack.js",
      "sourceDirectory": "src/renderer"
    },
    "whiteListedModules": [
      "huetify-manager"
    ]
  }
}
